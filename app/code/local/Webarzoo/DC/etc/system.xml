<config>
    <sections>
        <dc translate="label" module="dc">
            <label>Product delivery checker</label>
            <tab>catalog</tab>
            <frontend_type>text</frontend_type>
            <sort_order>11</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <dc translate="label">
                    <label>Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <dc_enable translate="label">
                            <label>Checker Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </dc_enable>
						<dc_title translate="label">
                            <label>Block Title</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </dc_title>
						<dc_zipcode translate="label">
                            <label>Store zip code</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </dc_zipcode>
						<dc_range translate="label">
                            <label>Delivery Range</label>
							<comment>Range in miles.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </dc_range>
						<dc_success translate="label">
                            <label>Success message</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </dc_success>
						<dc_error translate="label">
                            <label>Failure message</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </dc_error>
						<dc_allowed translate="label">
                            <label>Zip codes allowed for product delivery</label>
							<comment>Enter the list of zipcodes with comma(,) separator.</comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </dc_allowed>  
						 <check translate="label">
             
                <frontend_type>button</frontend_type>
				<comment>Get zip codes only applicable for USA stores. After clicking on button you got a list of zip codes available on provided range.Copy and paste all zip-codes on above text-area and save data.</comment>
                <frontend_model>dc/adminhtml_system_config_form_button</frontend_model>
                <sort_order>20</sort_order>
                <show_in_default>1</show_in_default>
                <show_in_website>1</show_in_website>
                <show_in_store>1</show_in_store>
            </check>						
                    </fields>
                </dc>
            </groups>
        </dc>
    </sections>
</config>
